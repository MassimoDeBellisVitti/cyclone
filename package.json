{
  "name": "gcode-planner",
  "version": "1.0.0",
  "description": "Electron-based G-code planner application for Windows",
  "main": "dist/main.js",
  "author": "Tuo Nome",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "tsc",
    "dist": "electron-builder --windows --x64 --publish=never"
  },
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "^24.14.1",
    "typescript": "^5.4.0"
  },
  "build": {
    "appId": "com.tuonome.gcodeplanner",
    "productName": "Gcode Planner",
    "files": [
      "dist/**/*",
      "index.html",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}